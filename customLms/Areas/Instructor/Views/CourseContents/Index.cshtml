@model IEnumerable<customLms.Areas.Instructor.Models.CourseContentModel>
    @using customLms.Areas.Instructor.Models;

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped table-condensed">
    <tr class="success">
        <th>
            @Html.DisplayNameFor(model => model.courseName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.contentName)
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
       

         
        <td>
            @Html.DisplayFor(modelItem => item.courseName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.contentName)
        </td>
        @Html.Partial("_TableButtonPartial",
        new SmallButtonModel { ContentId=item.contentId,CourseId=item.courseId}
                                       )
    </tr>
}

</table>
